<h2>
    Upload a file with data
</h2>

<form asp-action="Upload" asp-contoller="Meteorology" enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label for="cityName">Enter a city name</label>
        </dt>
        <dd>
            <input type="text" name="cityName" />
        </dd>
    </dl>
    <dl>
        <dt>
            <label for="files">Upload a file please</label>
        </dt>
        <dd>
            <input type="file" name="files" />
        </dd>
    </dl>
    <input class="btn" type="submit" value="Upload" />
</form>